<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.android.finalproject.MainActivity"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/five_places_to_visit_in_Cluj"
        android:textAllCaps="true"
        android:textSize="20sp"
        android:id="@+id/text"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="160dp"
            android:layout_height="87dp"
            android:text="The National Theater"
            android:background="#e15258"
            android:id="@+id/nr3"
            android:textAllCaps="false"
            android:layout_below="@+id/nr1"
            android:layout_alignRight="@+id/button"
            android:layout_alignEnd="@+id/button"
            android:onClick="Deschide"
            android:layout_gravity="left|center_vertical" />

        <Button
            android:layout_width="160dp"
            android:layout_height="87dp"
            android:text="The Botanic Garden"
            android:textAllCaps="false"
            android:id="@+id/nr1"
            android:onClick="Deschide"
            android:layout_marginTop="46dp"
            android:layout_below="@+id/text"
            android:layout_toRightOf="@+id/imageView"
            android:layout_toEndOf="@+id/imageView"
            android:background="#e15258"
            android:layout_gravity="center_horizontal|top" />

        <Button
            android:layout_width="160dp"
            android:layout_height="87dp"
            android:text="The Central Park"
            android:id="@+id/nr2"
            android:textAllCaps="false"
            android:onClick="Deschide"
            android:layout_below="@+id/nr4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="33dp"
            android:background="#e15258"
            android:layout_gravity="left|bottom" />

        <Button
            android:layout_width="160dp"
            android:layout_height="87dp"
            android:text="The Salty Mine"
            android:id="@+id/nr4"
            android:textAllCaps="false"
            android:background="#e15258"
            android:layout_below="@+id/nr1"
            android:layout_toStartOf="@+id/nr2"
            android:onClick="Deschide"
            android:layout_alignRight="@+id/nr1"
            android:layout_alignEnd="@+id/nr1"
            android:layout_gravity="right|bottom" />

        <Button
            android:layout_width="160dp"
            android:layout_height="87dp"
            android:text="The Etnografic Museum"
            android:textAllCaps="false"
            android:id="@+id/button"
            android:layout_above="@+id/nr3"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="#e15258"
            android:onClick="Deschide"
            android:layout_gravity="right|center_vertical" />
    </FrameLayout>


</RelativeLayout>
